{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "es6",
    "lib": ["es6","dom"],
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
